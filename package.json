{
  "name": "soundcasts-web",
  "version": "1.0.0",
  "description": "For a project description, see [soundcasts-server](https://github.com/L33T-KR3W/soundcasts-server)",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:js & npm run build:css",
    "build:css": "postcss --use postcss-import --use autoprefixer -o build/screen.css styles/index.css",
    "build:js": "browserify index.js -t babelify | uglifyjs -cm > build/bundle.js",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "npm run build:css -- --watch",
    "watch:js": "budo index.js:bundle.js --dir build --css screen.css --live -- -t babelify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/L33T-KR3W/soundcasts-web.git"
  },
  "author": "L33T KR3W",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/L33T-KR3W/soundcasts-web/issues"
  },
  "homepage": "https://github.com/L33T-KR3W/soundcasts-web",
  "devDependencies": {
    "@cycle/isolate": "^1.1.1",
    "@motorcycle/core": "^1.0.0",
    "@motorcycle/dom": "^1.0.3",
    "autoprefixer": "^6.3.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "budo": "^7.1.0",
    "most": "^0.16.0",
    "normalize.css": "^3.0.3",
    "postcss-cli": "^2.4.0",
    "postcss-import": "^7.1.3",
    "uglify-js": "^2.6.1"
  }
}
